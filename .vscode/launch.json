{
	"version": "0.2.0",
	"configurations": [
		{
            "name": "start:dev",
            "command": "npm run start:dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "console",
        },
		{
			"name": "Debug Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
	]
}
