{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "debug",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/samples",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
            "name": "compile",
            "command": "npm run compile",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "console",
        },
		{
            "name": "watch",
            "command": "npm run watch",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}",
            "outputCapture": "console",
        },
	]
}
