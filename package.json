{
    "name": "trans-prompt",
    "displayName": "Trans Prompt",
    "description": "Inline translation overlay for prompt engineering in VS Code.",
    "version": "1.0.1",
    "publisher": "alkemic-studio",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/juncha9/trans-prompt"
    },
    "icon": "icon.png",
    "scripts": {
        "build": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "vscode-test",
        "package": "npx @vscode/vsce package",
        "publish": "npx @vscode/vsce publish"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "trans-prompt.translate",
                "title": "Trans Prompt: Translate Document",
                "icon": "$(globe)"
            },
            {
                "command": "trans-prompt.clearCache",
                "title": "Trans Prompt: Clear Translation Cache"
            },
            {
                "command": "trans-prompt.setApiKey",
                "title": "Trans Prompt: Set Google API Key"
            },
            {
                "command": "trans-prompt.setLanguage",
                "title": "Trans Prompt: Set Target Language"
            },
            {
                "command": "trans-prompt.reloadLine",
                "title": "Trans Prompt: Reload Line Translation"
            }
        ],
        "configuration": {
            "title": "Trans Prompt Configuration",
            "properties": {
                "trans-prompt.target_language": {
                    "type": "string",
                    "default": "ko",
                    "description": "Target language code for translation (e.g., ko, ja, en, zh-CN)",
                    "enum": [
                        "ko",
                        "ja",
                        "en",
                        "zh-CN",
                        "zh-TW",
                        "fr",
                        "de",
                        "es",
                        "ru"
                    ],
                    "enumDescriptions": [
                        "Korean (한국어)",
                        "Japanese (日本語)",
                        "English",
                        "Chinese Simplified (简体中文)",
                        "Chinese Traditional (繁體中文)",
                        "French (Français)",
                        "German (Deutsch)",
                        "Spanish (Español)",
                        "Russian (Русский)"
                    ]
                },
                "trans-prompt.google_api_key": {
                    "type": "string",
                    "default": "",
                    "description": "Google Cloud Translation API key",
                    "markdownDescription": "Google Cloud Translation API key. Get your API key from [Google Cloud Console](https://console.cloud.google.com/apis/credentials)."
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "trans-prompt.translate",
                    "when": "resourceExtname == .md",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "command": "trans-prompt.reloadLine",
                    "when": "resourceExtname == .md",
                    "group": "trans-prompt"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.19.10",
        "@types/vscode": "^1.109.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "typescript": "^5.9.3"
    }
}
